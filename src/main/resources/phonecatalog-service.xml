<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="phoneListService" class="com.springinaction.firstmvc.service.PhoneServiceImpl">
        <property name="phonesMap">
            <map>
                <entry key="111">
                    <bean class="com.springinaction.firstmvc.model.persistence.Phone"
                          p:id="111" p:name="Motorola ABC" p:opinion="Good, as for Motorola"
                          p:price="450"/>
                </entry>
                <entry key="236">
                    <bean class="com.springinaction.firstmvc.model.persistence.Phone"
                          p:id="236" p:name="MOTOROLA 543" p:opinion="No bad"
                          p:price="300"/>
                </entry>
                <entry key="789">
                    <bean class="com.springinaction.firstmvc.model.persistence.Phone"
                          p:id="789" p:name="Dell XYZ" p:opinion="Best of all DELLs"
                          p:price="510"/>
                </entry>
                <entry key="234">
                    <bean class="com.springinaction.firstmvc.model.persistence.Phone"
                          p:id="234" p:name="Samsung S3" p:opinion="Simple the best"
                          p:price="720"/>
                </entry>
            </map>
        </property>
    </bean>
</beans>